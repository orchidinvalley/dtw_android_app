<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#3caaff"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/customize_kw_add_quit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/back_normal"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="新建唤醒词"
            android:textColor="@color/white"
            android:textSize="22dp"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    请输入唤醒词，用逗号隔开。每个唤醒词为4-6个汉字或不超过2个英文单词。中英文不可同时配置。\n    示例，唤醒词可以设置成一段全部为中文的：小白小白，你好小百。或者全部是英文的：Hi Tom，Hi John"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:text="唤醒词名称:"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/customize_kw_add_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_input_style"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:hint="输入您要添加的唤醒词"
            android:inputType="text"
            android:singleLine="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/customize_kw_add_nxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="下一步"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="#3caaff"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</LinearLayout>
